      <OnDragStop>
        if not MegaMacroConfig_IsWindowDialog() then
        self:StopMovingOrSizing();
        MegaMacro_Window_OnDragStop();
        end
      </OnDragStop>
      <OnShow>
        if not MegaMacroWindowTogglingMode then
        PlaySound(SOUNDKIT.IG_CHARACTER_INFO_OPEN);
        MegaMacro_Window_OnShow();
        end
      </OnShow>
      <OnHide>
        if not MegaMacroWindowTogglingMode then
